<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Repositório</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- incluindo css -->
		<link href="css/style-bootstrap3.css" rel="stylesheet">
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/logoRepocitorio.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header" >			
					<img src="images/logoRepocitorio.png" class="small-image" />
					
				</div>
					<%-include('../partes/navbar')%>
			</div>
			
		</nav>
	    <div class="container">
			<%if(validacao.length>0){%>
				<div class="row">
					<div class="col-md-12 ">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<%for(var i=0;i<validacao.length;i++){%>
									<li><%=validacao[i].msg%>></li>
								<%}%>
							</ul>
						</div>
					</div>
				</div>
			<%}%>
	    	<div class="row">
	    		<div class="col-md-12">
					<div class="formulario_wrapper sombra">
						<h1 class="centro ">Formulario de Cadastro</h1>
	    			<form action="/cadastro" method="post">
						<div class="form-group">
							<label for="pwd">nome:</label>
							<input type="text" class="form-control" id="nome"  value="<%=usuario.nome%>" name="nome">
						</div>			
						<div class="form-group">
							<label for="login">login:</label>
							<input type="text" class="form-control" id="login" value="<%=usuario.login%>" name="login">
						</div>			
						<div class="form-group">
							<label for="pwd">senha:</label>
							<input type="password" class="form-control" id="senha" value="<%=usuario.senha%>" name="senha">
						</div>
						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
			</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>