<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Repositório</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- incluindo css -->
		<link href="css/style-bootstrap3.css" rel="stylesheet">
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/logoRepocitorio.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header" >			
					<img src="images/logoRepocitorio.png" class="small-image" />
					
				</div>
					<%-include('../partes/navbar')%>
			</div>
			
		</nav>
	    <div class="container">
			<%if(validacao.length>0){%>
				<div class="row">
					<div class="col-md-12 ">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<%for(var i=0;i<validacao.length;i++){%>
									<li><%=validacao[i].msg%>></li>
								<%}%>
							</ul>
						</div>
					</div>
				</div>
			<%}%>
	    	<div class="row " >
	    		<div class="col-md-12 ">
					<div class="formulario_wrapper sombra">
					<h1 class="centro ">Novo Projeto</h1>
	    			<form action="/adicionar" method="post" >
						<div class="form-group">
							<label for="nome_projeto">Nome Projeto:</label>
							<input type="text" class="form-control" id="nome_projeto" value="<%=JProjetos.nome_projeto%>" name="nome_projeto">
						</div>
						<div class="form-group">
							<label for="pwd">disciplina:</label>
							<input type="text" class="form-control" id="disciplina"  value="<%=JProjetos.disciplina%>" name="disciplina">
						</div>						
						<div class="form-group">
							<label for="pwd">orientador:</label>
							<input type="text" class="form-control" id="orientador" value="<%=JProjetos.orientador%>" name="orientador">
						</div>
						<div class="form-group">
							<label for="pwd">Data:</label>
							<input type="date" class="form-control" id="data_inicio" value="<%=JProjetos.data_inicio%>" name="data_inicio">
						</div>
						<div class="form-group">
							<label for="pwd">resumo:</label>
							<textarea class="form-control" id="resumo" name="resumo"><%=JProjetos.resumo %></textarea>
						</div>
						<input type="hidden" name="id_user" id="id_user" value="<%= flagUsuario %>">
						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
	    	</div>
		</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>