<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Repositório</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- incluindo css -->
		<link href="css/style-bootstrap3.css" rel="stylesheet">
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/logoRepocitorio.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header" >			
					<img src="images/logoRepocitorio.png" class="small-image" />
					
				</div>
					<%-include('../partes/navbar')%>
			</div>
			
		</nav>
	    <div class="container">
			<%if(validacao.length>0){%>
				<div class="row">
					<div class="col-md-12 ">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<%for(var i=0;i<validacao.length;i++){%>
									<li><%=validacao[i].msg%>></li>
								<%}%>
							</ul>
						</div>
					</div>
				</div>
			<%}%>
			
	    	<div class="row">
	    		<div class="col-md-12">
					<div class="formulario_wrapper sombra">
					<h1 class="centro">Formulario de Edição</h1>
	    			<form action="/editar" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label for="nome_projeto">Nome Projeto:</label>
							<input type="text" class="form-control" id="nome_projeto" value="<%=JProjetos[0].nome_projeto%>" name="nome_projeto">
						</div>
						<div class="form-group">
							<label for="pwd">Disciplina:</label>
							<input type="text" class="form-control" id="disciplina"  value="<%=JProjetos[0].disciplina%>" name="disciplina">
						</div>						
						<div class="form-group">
							<label for="pwd">Orientador:</label>
							<input type="text" class="form-control" id="orientador" value="<%=JProjetos[0].orientador%>" name="orientador">
						</div>
						<div class="form-group">
							<label for="pwd">Data:</label>
							<input type="date" class="form-control" id="data_inicio" value="" name="data_inicio">
						</div>
						<div class="form-group">
							<label for="pwd">Resumo:</label>
							<textarea class="form-control" id="resumo" name="resumo"><%=JProjetos[0].resumo %></textarea>
						</div>
						<input type="hidden" name="id_projeto" value="<%= JProjetos[0].id_projeto %>">
						<div class="form-group form-inline">
							<label for="Arquivos">Adicionar arquivos:</label>
							<input type="file" class="btn btn-default" id="file" name="file[]" placeholder="file" accept=".txt, .doc, .docx, .pdf, image/*, video/*" multiple>
						</div>
						<button type="submit" class="btn btn-default">Salvar</button>
						</form>
						<br>
		    	</div>
			
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
    <script>
        var dataProjeto = new Date('<%=JProjetos[0].data_inicio%>').toISOString().split('T')[0];
        document.getElementById('data_inicio').value = dataProjeto;
    </script>
</html>